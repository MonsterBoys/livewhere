<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xu.hasee.livewhere.home.HotelCollectionActivity">

    <TextView
        android:id="@+id/hotel_collection_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#20D485"
        android:gravity="center"
        android:text="酒店收藏"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/load_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/load_error"
        android:visibility="gone" />

    <TextView
        android:id="@+id/load_error_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/load_error"
        android:gravity="center"
        android:text="您什么都没有留下！"
        android:textSize="18sp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/collection_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hotel_collection_bar"></ListView>
</RelativeLayout>
