<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xu.hasee.livewhere.myinfo.PhoneSecretActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/set_toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#20D485"
        app:contentInsetStart="0dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/secret_back"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:background="@null"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="手机密保"
                android:textColor="#fff"
                android:textSize="20sp" />

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <com.xu.hasee.livewhere.myinfo.weight.RoundProgressBarWidthNumber
        android:id="@+id/Roundprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:progress="0"
        zhy:progress_reached_bar_height="1dp"
        zhy:progress_text_color="#ffF53B03"

        zhy:progress_text_size="14sp"
        zhy:progress_unreached_bar_height="5dp"
        zhy:progress_unreached_color="#c7c7c7"
        zhy:radius="40dp" />

    <TextView
        android:id="@+id/secret_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Roundprogressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="如提示输入有误，可点击刷新" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/secret_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/otp_number_bg"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="6">

        <ImageView
            android:id="@+id/number_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/otp_number_one" />

        <ImageView
            android:id="@+id/number_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/otp_number_two" />

        <ImageView
            android:id="@+id/number_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/otp_number_three" />

        <ImageView
            android:id="@+id/number_four"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/otp_number_four" />

        <ImageView
            android:id="@+id/number_five"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/otp_number_five" />

        <ImageView
            android:id="@+id/number_six"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/otp_number_six" />


    </LinearLayout>


</RelativeLayout>
