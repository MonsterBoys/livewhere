<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xu.hasee.livewhere.home.hotel_detile.hotel_info.HotelInfoActivity">

    <TextView
        android:id="@+id/holtel_info_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#20D485"
        android:gravity="center"
        android:text="酒店信息"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/info_back"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back" />

    <RadioGroup
        android:id="@+id/info_rdg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/holtel_info_bar"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/hotel_commend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/search_title_selector"
            android:gravity="center"
            android:text="酒店点评"
            android:textColor="@drawable/search_textcolor_selector"
            />

        <RadioButton
            android:id="@+id/hotel_nearby"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/search_title_selector"
            android:gravity="center"
            android:text="酒店周边"
            android:textColor="@drawable/search_textcolor_selector"
            />

        <RadioButton
            android:id="@+id/hotel_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/search_title_selector"
            android:gravity="center"
            android:text="酒店介绍"
            android:textColor="@drawable/search_textcolor_selector"
            />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/info_rdg" />
</RelativeLayout>
