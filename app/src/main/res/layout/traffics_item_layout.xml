<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/traffic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"

        android:text="距离上海南站" />

    <TextView
        android:id="@+id/traffic_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:text="8.4" />

    <ImageView
        android:id="@+id/che"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/traffic_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/traffic_icon" />

    <TextView
        android:text="12"
        android:id="@+id/time_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/traffic_name"
        android:textColor="#20D485"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/che" />
    <TextView
        android:id="@+id/dayPrice_yuan"
        android:text="24"
        android:layout_width="wrap_content"
        android:textColor="#20D485"
        android:layout_height="wrap_content"
        android:layout_below="@id/traffic_name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/time_minute" />
</RelativeLayout>