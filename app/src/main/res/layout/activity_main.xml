<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xu.hasee.livewhere.MainActivity">

    <!--欢迎页面-->
    <ImageView
        android:id="@+id/welcome_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/startimg_holidays"
        />
    <!--    主界面-->

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/rdg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/home_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_btn_selector"
                android:gravity="center"
                android:text="主页"
                android:checked="true"
                android:textColor="@drawable/text_color_selector" />

            <RadioButton
                android:id="@+id/route"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/route_btn_selector"
                android:gravity="center"
                android:text="行程"
                android:textColor="@drawable/text_color_selector" />

            <RadioButton
                android:id="@+id/myinfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/myzhuna_btn_selector"
                android:gravity="center"
                android:text="我的"
                android:textColor="@drawable/text_color_selector" />

            <RadioButton
                android:id="@+id/message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/message_btn_selector"
                android:gravity="center"
                android:textColor="@drawable/text_color_selector"
                android:text="消息" />

            <RadioButton
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/phone_btn_selector"
                android:gravity="center"
                android:text="电话"
                android:textColor="@drawable/text_color_selector" />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/fg_ll"
            android:layout_above="@id/rdg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    </RelativeLayout>
</RelativeLayout>
