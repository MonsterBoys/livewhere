<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myinfo.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/login_toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#20D485"
        app:contentInsetStart="0dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/order_back"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:background="@null"
                android:src="@drawable/back"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="全部订单"
                android:textColor="#fff"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/order_call"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:src="@drawable/phone"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>



        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/order_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/login_toolBar"
        android:background="#FFF"
        >
        <ListView
            android:id="@+id/order_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF">
        </ListView>

        <ImageView
            android:id="@+id/order_error_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/Loading_Animation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_error_iv"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


</RelativeLayout>
