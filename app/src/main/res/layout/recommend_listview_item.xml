<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_recommend_listview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_recomment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_recommend_listview"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:text="最美小城,苗族风情"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_recomment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_recomment2"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:text="凤凰(湘西)"
        android:textColor="#59efbd"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>